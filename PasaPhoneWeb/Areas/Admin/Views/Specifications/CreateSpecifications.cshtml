@model Specification

@{
    ViewData["Title"] = "Specification";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 m-0">Create New Phone Listing</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" id="create_form">
            <div class="border p-3 rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <select asp-for="Os" class="form-select form-control">
                        <option value="" selected disabled>Select Operating System</option>
                        <option value="Android">Android</option>
                        <option value="iOS">iOS</option>
                        <option value="Others">Others</option>
                    </select>
                    <label asp-for="Os" class="control-label"></label>
                    <span asp-validation-for="Os" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Chipset" class="form-control" placeholder="Enter Phone's Chipset" />
                    <label asp-for="Chipset" class="control-label"></label>
                    <span asp-validation-for="Chipset" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Memory" class="form-control" placeholder="Enter Phone's Memory" />
                    <label asp-for="Memory" class="control-label"></label>
                    <span asp-validation-for="Memory" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Storage" class="form-control" placeholder="Enter Phone's Storage" />
                    <label asp-for="Storage" class="control-label"></label>
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="Camera" class="form-control" style="height: 80px" placeholder="Tell about the phone's camera'"></textarea>
                    <label asp-for="Camera" class="control-label"></label>
                    <span asp-validation-for="Camera" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="DisplayResolution" class="form-control" placeholder="Enter Phone's Display Resolution" />
                    <label asp-for="DisplayResolution" class="control-label"></label>
                    <span asp-validation-for="DisplayResolution" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="DisplayType" class="form-control" placeholder="Enter Phone's DisplayType" />
                    <label asp-for="DisplayType" class="control-label"></label>
                    <span asp-validation-for="DisplayType" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BatteryCapacity" class="form-control" placeholder="Enter Phone's BatteryCapacity" />
                    <label asp-for="BatteryCapacity" class="control-label"></label>
                    <span asp-validation-for="BatteryCapacity" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ChargingSpeed" class="form-control" placeholder="Enter Phone's ChargingSpeed" />
                    <label asp-for="ChargingSpeed" class="control-label"></label>
                    <span asp-validation-for="ChargingSpeed" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="OtherSpecs" class="form-control" style="height: 80px" placeholder="Tell about the phone's other specifications'"></textarea>
                    <label asp-for="OtherSpecs" class="control-label"></label>
                    <span asp-validation-for="OtherSpecs" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-center mt-4">
                    <div class="col-6 col-md-3 m-1 m-md-2">
                        <a asp-controller="Phones" asp-action="Create" class="form-control btn btn-outline-primary">Back</a>
                    </div>
                    <div class="col-6 col-md-3 m-1 m-md-2">
                        <button id="create_submit_btn" type="submit" class="submit_btn form-control btn btn-primary">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); // for client-side validation
    } 
}
