@model IEnumerable<Phone>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4 pb-3 mb-2">
        <div class="col-4 text-start">
            <h2 class="text-primary">My Listings</h2>
        </div>
        <div class="col-4 text-center">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search Listing" aria-label="Search Listing" aria-describedby="button-addon2">
                <button class="btn btn-primary" type="button" id="button-addon2">Search</button>
            </div>
        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                </svg>
            </a>
        </div>
    </div>
    <div class="table-container table-responsive rounded-3">
        <table class="table table-sm table-bordered table-hover">
            <thead>
                <tr class="text-center">
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.Brand)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.Model)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.Condition)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.Issues)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.MeetupPreference)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        @Html.DisplayNameFor(model => model.DateModified)
                    </th>
                    <th class="text-white text-bg-primary" scope="col">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="clickable-rows" onclick="window.location.href = '@Url.Action("Details", new { id = item.Id })';">
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Condition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Issues)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MeetupPreference)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateModified)
                        </td>
                        <td>
                            <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn btn-dark mx-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                    </svg>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn btn-danger mx-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

